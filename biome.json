{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "apps/infera/src/app/**",
      "apps/infera/src/components/**",
      "apps/infera/src/config/**",
      "apps/infera/src/features/**",
      "apps/infera/src/hooks/**",
      "apps/infera/src/mocks/**",
      "apps/nexus/src/app/**",
      "apps/nexus/src/components/**",
      "apps/nexus/src/config/**",
      "apps/nexus/src/features/**",
      "apps/nexus/src/hooks/**",
      "apps/nexus/src/mocks/**",
      "packages/confirm/**",
      "packages/error-core/**",
      "packages/platform-router/**",
      "packages/theme-system/**",
      "packages/ui-utils/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "all",
      "semicolons": "asNeeded"
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
