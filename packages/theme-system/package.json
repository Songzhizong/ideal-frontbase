{
  "name": "@ideal-frontbase/theme-system",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": "./index.ts"
  },
  "types": "./index.ts",
  "scripts": {
    "typecheck": "tsc --noEmit",
