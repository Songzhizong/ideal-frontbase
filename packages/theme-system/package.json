    "tokens:consistency-check": "vitest run ../../packages/theme-system/root-fallback-consistency.test.ts --root ../..",
    "tokens:generate": "pnpm run tokens:sync-root-fallbacks && node ./scripts/generate-token-artifacts.mjs",
    "tokens:check": "pnpm run tokens:consistency-check && node ./scripts/generate-token-artifacts.mjs --check"
  },
  "peerDependencies": {
    "react": "^19.2.3",
    "next-themes": "^0.4.6"
