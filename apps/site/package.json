{
  "name": "@ideal-frontbase/site",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite --mode dev",
    "build": "vite build --mode prod",
    "build-mock": "vite build --mode mock",
    "build-mock:pages": "pnpm run build-mock && node scripts/build-pages-404.mjs mock",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome check . --no-errors-on-unmatched",
    "format": "biome format . --write --no-errors-on-unmatched",
    "msw:init": "msw init public/ --save",
    "routes:generate": "node scripts/generate-route-tree.mjs"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.12.3",
  "dependencies": {
    "@ideal-frontbase/platform-router": "workspace:*",
    "@ideal-frontbase/theme-system": "workspace:*",
    "@ideal-frontbase/ui": "workspace:*",
    "@ideal-frontbase/ui-utils": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^25.0.10"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
